<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarThumbVertical="@color/purple_700"
    android:scrollbars="vertical"
    android:background="#FFFFFF"
    tools:context=".AboutAdmin">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="#76E8D6"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/balkrishn" />

        <TextView
            android:id="@+id/krishna_sweet_logo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#E1E87D"
            android:backgroundTint="#76E8D6"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center|left"
            android:text="Krishna Sweets"
            android:textColor="#FB0E76"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/cart"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/cart1" />

        <ImageView
            android:id="@+id/profile"
            android:layout_width="50dp"
            android:layout_height="match_parent"

            android:layout_marginTop="10dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="#76E8D6"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/mychef" />

    </LinearLayout>

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:scaleType="fitXY"
                android:src="@drawable/krishnasweets" />

            <ImageView
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:background="#FFFFFF"
                android:scaleType="centerCrop"
                android:src="@drawable/a" />

            <ImageView
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:background="#FFFFFF"
                android:scaleType="centerCrop"
                android:src="@drawable/b" />
        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/info"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/textbackground"
        android:fontFamily="@font/aclonica"
        android:scrollbarThumbVertical="@color/purple_700"
        android:scrollbars="vertical"
        android:textColor="#000701"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView" />
</androidx.constraintlayout.widget.ConstraintLayout>