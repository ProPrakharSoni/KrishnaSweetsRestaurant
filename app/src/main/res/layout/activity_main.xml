<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <include layout="@layout/main_toolbar" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:focusableInTouchMode="true">

        <TextView
            android:id="@+id/textView"
            style="selima"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFEB3B"
            android:fontFamily="cursive"
            android:gravity="center"
            android:text="Order Items Now..."
            android:textColor="#E40F65"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="10dp"
            app:columnCount="2"
            app:layout_constraintBottom_toTopOf="@+id/otherItems"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:rowCount="7">

            <Button
                android:id="@+id/Pasta"
                android:layout_width="24dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_corner"
                android:fontFamily="sans-serif-medium"
                android:text="Pasta"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="italic"
                app:layout_columnWeight="1"
                app:layout_gravity="fill"
                app:layout_rowWeight="1" />

            <Button
                android:id="@+id/Rice"
                android:layout_width="24dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_corner"
                android:text="Fried Rice"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="italic"
                app:layout_columnWeight="1"
                app:layout_gravity="fill"
                app:layout_rowWeight="1" />

            <Button
                android:id="@+id/Chinese"
                android:layout_width="24dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_corner"
                android:text="Chinese"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="italic"
                app:layout_columnWeight="1"
                app:layout_gravity="fill"
                app:layout_rowWeight="1" />

            <Button
                android:id="@+id/Chaumin"
                android:layout_width="24dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_corner"
                android:text="Noodles"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="italic"
                app:layout_columnWeight="1"
                app:layout_gravity="fill"
                app:layout_rowWeight="1" />

            <Button
                android:id="@+id/Burger"
                android:layout_width="24dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_corner"
                android:text="Burger"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="italic"
                app:layout_columnWeight="1"
                app:layout_gravity="fill"
                app:layout_rowWeight="1" />

            <Button
                android:id="@+id/Pav_Baji"
                android:layout_width="24dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_corner"
                android:text="Pav Baji"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="italic"
                app:layout_columnWeight="1"
                app:layout_gravity="fill"
                app:layout_rowWeight="1" />

            <Button
                android:id="@+id/Ice_Cream"
                android:layout_width="24dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_corner"
                android:text="Ice Cream"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="italic"
                app:layout_columnWeight="1"
                app:layout_gravity="fill"
                app:layout_rowWeight="1" />

            <Button
                android:id="@+id/Dhosa"
                android:layout_width="24dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_corner"
                android:text="Dhosa"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="italic"
                app:layout_columnWeight="1"
                app:layout_gravity="fill"
                app:layout_rowWeight="1" />

            <Button
                android:id="@+id/Soup"
                android:layout_width="24dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_corner"
                android:text="Soup"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="italic"
                app:layout_columnWeight="1"
                app:layout_gravity="fill"
                app:layout_rowWeight="1" />

            <Button
                android:id="@+id/Cold_Drink"
                android:layout_width="24dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_corner"
                android:text="Cold drink"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="italic"
                app:layout_columnWeight="1"
                app:layout_gravity="fill"
                app:layout_rowWeight="1" />

            <Button
                android:id="@+id/Bakery"
                android:layout_width="24dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_corner"
                android:text="Bakery"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="italic"
                app:layout_columnWeight="1"
                app:layout_gravity="fill"
                app:layout_rowWeight="1" />

            <Button
                android:id="@+id/Nasta"
                android:layout_width="24dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_corner"
                android:text="Nasta"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="italic"
                app:layout_columnWeight="1"
                app:layout_gravity="fill"
                app:layout_rowWeight="1" />

            <Button
                android:id="@+id/Sweets"
                android:layout_width="24dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_corner"
                android:text="Sweets"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="italic"
                app:layout_columnWeight="1"
                app:layout_gravity="fill"
                app:layout_rowWeight="1" />

            <Button
                android:id="@+id/Pizza"
                android:layout_width="24dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_corner"
                android:radius="30dp"
                android:text="Pizza"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="italic"
                app:layout_columnWeight="1"
                app:layout_gravity="fill"
                app:layout_rowWeight="1" />
        </androidx.gridlayout.widget.GridLayout>

        <Button
            android:id="@+id/otherItems"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/riunded_button"
            android:gravity="center"
            android:text="Other Items"
            android:textAllCaps="false"
            android:textColor="#E83C3C"
            android:textColorLink="#FFFFFF"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/offers"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/offers"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/riunded_button"
            android:gravity="center"
            android:text="Birthday 🥳🥳"
            android:textAllCaps="false"
            android:textColor="#E83C3C"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/aboutUs"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/aboutUs"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="45dp"
            android:background="@drawable/riunded_button"
            android:gravity="center"
            android:text="About us"
            android:textAllCaps="false"
            android:textColor="#E83C3C"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/marqueeText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/developer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:background="#FFEB3B"
            android:gravity="center"
            android:text="Prakhar Soni,CSE,Indian Institute Of Information Technology Surat"
            android:textColor="#0B0A0A"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/marqueeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#36F456"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="Welcome to Krishna Sweets App, Home delivery available above Rs.200!!"
            android:textColor="#050505"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/developer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </LinearLayout>

    </ScrollView>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white">

        <include layout="@layout/main_nav_drawer" />

    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>