<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".PaymentActivity">

    <TextView
        android:id="@+id/summary"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:gravity="center"
        android:text="Order Summary"
        android:textColor="#213DF3"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radioGroup2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.97"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridView">

        <RadioButton
            android:id="@+id/cashOnDelivery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="#0E8BEF"
            android:selectAllOnFocus="false"
            android:text="Cash On Delivery"
            android:textColor="#F14008"
            android:textIsSelectable="false"
            android:textSize="16sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/payOnline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="#0E8BEF"
            android:selectAllOnFocus="false"
            android:text="Pay through Google Pay"
            android:textColor="#F14008"
            android:textIsSelectable="false"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="invisible" />
    </RadioGroup>

    <GridView
        android:id="@+id/gridView"
        android:layout_width="0dp"
        android:layout_height="366dp"
        android:background="@color/common_google_signin_btn_text_dark_focused"
        android:clipToPadding="false"
        android:numColumns="5"
        android:verticalSpacing="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/summary">

    </GridView>

    <Button
        android:id="@+id/placeOrder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/rounded_corner"
        android:text="Place Order"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup2" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="5dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.304"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/placeOrder">

        <ImageView
            android:id="@+id/callButton"
            android:layout_width="57dp"
            android:layout_height="49dp"
            app:srcCompat="@drawable/calling" />

        <TextView
            android:id="@+id/callText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="15dp"
            android:text="Call for Confirming your Order"
            android:textColor="#3A2F78"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>